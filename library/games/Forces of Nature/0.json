  "knock": {
    "type": "button",
    "id": "knock",
    "x": 350,
    "y": 546,
    "z": 21,
    "movableInEdit": false,
    "css": "font-size: 27px; ",
    "clickRoutine": [
      {
        "func": "INPUT",
        "fields": [
          {
            "type": "title",
            "text": "Knock"
          },
          {
            "type": "subtitle",
            "text": "This will end the round and give two points to the winning player.  The score will automatically be updated.  Do you want to continue?"
          }
        ],
        "confirmButtonText": "Knock"
      },
      {
        "func": "SET",
        "collection": "thisButton",
        "property": "scale",
        "value": 0
      },
      {
        "func": "SET",
        "collection": [
          "yield"
        ],
        "property": "scale",
        "value": 0
      },
      {
        "func": "SET",
        "collection": [
          "play"
        ],
        "property": "scale",
        "value": 1
      },
      {
        "func": "SELECT",
        "type": "seat",
        "property": "player",
        "value": "${playerName}"
      },
      {
        "func": "GET",
        "property": "index",
        "variable": "seatIndex"
      },
      {
        "func": "IF",
        "operand1": "${seatIndex}",
        "operand2": 1,
        "thenRoutine": [
          {
            "func": "CALL",
            "routine": "knockRoutine",
            "arguments": {
              "knocker": 1,
              "other": 2
            }
          }
        ],
        "elseRoutine": [
          {
            "func": "CALL",
            "routine": "knockRoutine",
            "arguments": {
              "knocker": 2,
              "other": 1
            }
          }
        ]
      }
    ],
    "text": "Knock",
    "knockRoutine": [
      {
        "func": "GET",
        "collection": [
          "playTotal"
        ],
        "property": "text",
        "variable": "playPoints"
      },
      {
        "func": "GET",
        "collection": [
          "handTotal${knocker}"
        ],
        "property": "text",
        "variable": "knockerPoints"
      },
      {
        "func": "GET",
        "collection": [
          "handTotal${other}"
        ],
        "property": "text",
        "variable": "otherPoints"
      },
      {
        "func": "IF",
        "operand1": "${knockerPoints}",
        "relation": ">",
        "operand2": "${playPoints}",
        "thenRoutine": [
          {
            "func": "LABEL",
            "label": "score${other}",
            "mode": "inc",
            "value": 2
          },
          {
            "func": "SET",
            "collection": [
              "seat1",
              "seat2"
            ],
            "property": "turn",
            "value": false
          },
          {
            "func": "SET",
            "collection": [
              "seat${other}"
            ],
            "property": "turn",
            "value": true
          }
        ],
        "elseRoutine": [
          {
            "func": "IF",
            "operand1": "${otherPoints}",
            "relation": ">",
            "operand2": "${playPoints}",
            "thenRoutine": [
              {
                "func": "LABEL",
                "label": "score${knocker}",
                "mode": "inc",
                "value": 2
              },
              {
                "func": "SET",
                "collection": [
                  "seat1",
                  "seat2"
                ],
                "property": "turn",
                "value": false
              },
              {
                "func": "SET",
                "collection": [
                  "seat${knocker}"
                ],
                "property": "turn",
                "value": true
              }
            ],
            "elseRoutine": [
              {
                "func": "IF",
                "operand1": "${knockerPoints}",
                "relation": ">",
                "operand2": "${otherPoints}",
                "thenRoutine": [
                  {
                    "func": "LABEL",
                    "label": "score${knocker}",
                    "mode": "inc",
                    "value": 2
                  },
                  {
                    "func": "SET",
                    "collection": [
                      "seat1",
                      "seat2"
                    ],
                    "property": "turn",
                    "value": false
                  },
                  {
                    "func": "SET",
                    "collection": [
                      "seat${knocker}"
                    ],
                    "property": "turn",
                    "value": true
                  }
                ],
                "elseRoutine": [
                  {
                    "func": "LABEL",
                    "label": "score${other}",
                    "mode": "inc",
                    "value": 2
                  },
                  {
                    "func": "SET",
                    "collection": [
                      "seat1",
                      "seat2"
                    ],
                    "property": "turn",
                    "value": false
                  },
                  {
                    "func": "SET",
                    "collection": [
                      "seat${other}"
                    ],
                    "property": "turn",
                    "value": true
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "func": "CALL",
        "routine": "moveCardsRoutine"
      }
    ],
    "moveCardsRoutine": [
      {
        "func": "FOREACH",
        "in": [
          1,
          2
        ],
        "loopRoutine": [
          {
            "func": "GET",
            "collection": [
              "seat${value}"
            ],
            "property": "player",
            "variable": "playerID"
          },
          {
            "func": "SELECT",
            "type": "card",
            "property": "owner",
            "value": "${playerID}"
          },
          {
            "func": "SET",
            "property": "parent",
            "value": "draw${value}"
          },
          {
            "func": "SET",
            "property": "owner",
            "value": null
          },
          {
            "func": "MOVE",
            "from": "draw${value}",
            "to": "tempHolder",
            "count": 0
          },
          {
            "func": "SORT",
            "holder": "tempHolder",
            "key": "rank"
          },
          {
            "func": "MOVE",
            "from": "tempHolder",
            "to": "draw${value}",
            "count": 0
          }
        ]
      }
    ]
  },
