      "var wordArray = ${PROPERTY wordArray}",
      "var wordArrayCount = ${wordArray} length",
      "var wordArrayCount = ${wordArrayCount} - 1",
      "var randomWordIndex = randInt 0 ${wordArrayCount}",
      "var randomWord = ${PROPERTY wordArray} getIndex ${randomWordIndex}",
      {
        "func": "LABEL",
        "label": "labelWord",
        "value": "${randomWord}"
      },
      {
        "note": "This removes the word so it will not be used again.",
        "func": "CALL",
        "routine": "zzRemoveWordRoutine"
      },
      "var wordVisArray = []",
      {
        "func": "FOREACH",
        "in": "${PROPERTY activeSeats}",
        "loopRoutine": [
          {
            "func": "IF",
            "operand1": "${value}",
            "operand2": "${activeSeatID}",
            "thenRoutine": [],
            "elseRoutine": [
              "var wordVisArray = ${wordVisArray} concatArray ${value}"
            ]
          }
        ]
      },
      {
        "func": "SET",
        "collection": [
          "labelWord"
        ],
        "property": "onlyVisibleForSeat",
        "value": "${wordVisArray}"
      }
