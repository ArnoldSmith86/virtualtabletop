  "wwid": {
    "type": "button",
    "text": "Cursor On",
    "clickRoutine": [
      "var a = ${PROPERTY currentState} + 1",
      "var b = ${a} % 2",
      {
        "func": "SET",
        "collection": "thisButton",
        "property": "currentState",
        "value": "${b}"
      },
      {
        "func": "IF",
        "operand1": "${b}",
        "operand2": 1,
        "thenRoutine": [
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "css",
            "value": "${PROPERTY cursorOff}"
          },
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "text",
            "value": "Cursor Off"
          }
        ],
        "elseRoutine": [
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "css",
            "value": "${PROPERTY cursorOn}"
          },
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "text",
            "value": "Cursor On"
          }
        ]
      }
    ],
    "x": 154,
    "y": 522,
    "z": 9793,
    "id": "wwid",
    "currentState": 0,
    "cursorOff": {
      "anythinghere, .cursor": {
        "display": "none"
      }
    },
    "cursorOn": {},
    "css": {}
  },
