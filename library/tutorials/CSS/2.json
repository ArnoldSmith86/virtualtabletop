  "ld5d": {
    "type": "button",
    "id": "ld5d",
    "x": 700,
    "y": 525,
    "z": 1,
    "text": "Change Cursor",
    "clickRoutine": [
      {
        "func": "SELECT",
        "property": "id",
        "value": "cursorCSS"
      },
      {
        "func": "IF",
        "condition": "${PROPERTY cursorMod OF cursorCSS}",
        "thenRoutine": [
          {
            "func": "SET",
            "property": "cursorMod",
            "value": false
          }
        ],
        "elseRoutine": [
          {
            "func": "SET",
            "property": "cursorMod",
            "value": true
          }
        ]
      }
    ]
  },
