  "6w7k": {
    "type": "button",
    "clickRoutine": [
      "var a = ${PROPERTY currentState} + 1",
      "var b = ${a} % 6",
      {
        "func": "SET",
        "collection": "thisButton",
        "property": "currentState",
        "value": "${b}"
      },
      "var backgroundArray = ${PROPERTY backgroundArray}",
      "var backgroundColor = ${backgroundArray.$b}",
      {
        "func": "SET",
        "collection": "thisButton",
        "property": "backgroundColor",
        "value": "${backgroundColor}"
      }
    ],
    "x": 900,
    "y": 350,
    "z": 20,
    "id": "6w7k",
    "text": "PROPERTY",
    "width": 100,
    "height": 100,
    "css": {
      "background": "${PROPERTY backgroundColor}"
    },
    "backgroundArray": [
      "red",
      "orange",
      "yellow",
      "green",
      "blue",
      "purple"
    ],
    "currentState": 0,
    "backgroundColor": "red"
  },
