  "bag-holder": {
    "type": "holder",
    "id": "bag-holder",
    "parent": "bag-composite",
    "fixedParent": true,
    "height": 50,
    "movableInEdit": false,
    "css": {
      "": {
        "border-color": "transparent",
        "background-color": "transparent"
      },
      ":hover": {
        "background-color": "saddlebrown"
      },
      ".droppable.droptarget": {
        "background-color": "saddlebrown"
      },
      ">.droppable.droptarget": {
        "background-color": "saddlebrown"
      },
      ".empty:hover": {
        "background-color": "transparent"
      }
    },
    "dropTarget": {},
    "enterRoutine": [
      "//SET parent to a basic widget in the bag because PR#614 makes leaveRoutine wait until widget no longer overlaps if parent is holder (but not other widget types)",
      {
        "func": "SET",
        "collection": "child",
        "property": "parent",
        "value": "bag-contents"
      }
    ],
    "width": 100
  },
  "bag-contents": {
    "id": "bag-contents",
    "parent": "bag-holder",
    "fixedParent": true,
    "height": 50,
    "movable": false,
    "movableInEdit": false,
    "classes": "transparent",
    "css": {
      "": {
        "border-radius": "inherit",
        "overflow": "hidden /*widgets can only be accessed through the bag opening*/",
        "box-sizing": "inherit",
        "border-width": "inherit"
      },
      " .widget": {
        "opacity": "0 /*make widgets transparent in bag*/"
      }
    },
    "enterRoutine": [
      "//make widgets huge so they fill the bag opening",
      {
        "func": "GET",
        "collection": "child",
        "property": "scale",
        "variable": "childScale"
      },
      {
        "func": "SET",
        "collection": "child",
        "property": "savedScale",
        "value": "${childScale}"
      },
      {
        "func": "SET",
        "collection": "child",
        "property": "scale",
        "value": 100
      },
      {
        "func": "CALL",
        "routine": "updateCountRoutine"
      }
    ],
    "leaveRoutine": [
      "//restore widget size when they are taken out",
      {
        "func": "GET",
        "collection": "child",
        "property": "savedScale",
        "variable": "childScale"
      },
      {
        "func": "SET",
        "collection": "child",
        "property": "scale",
        "value": "${childScale}"
      },
      {
        "func": "SET",
        "collection": "child",
        "property": "savedScale",
        "value": null
      },
      {
        "func": "CALL",
        "routine": "updateCountRoutine"
      }
    ],
    "updateCountRoutine": [
      {
        "func": "SELECT",
        "property": "parent",
        "value": "${PROPERTY id}"
      },
      {
        "func": "COUNT"
      },
      {
        "func": "SHUFFLE"
      },
      {
        "func": "IF",
        "operand1": "${COUNT}",
        "operand2": 0,
        "thenRoutine": [
          {
            "func": "SET",
            "collection": [
              "bag-holder"
            ],
            "property": "classes",
            "value": "empty"
          },
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "text",
            "value": ""
          }
        ],
        "elseRoutine": [
          {
            "func": "SET",
            "collection": [
              "bag-holder"
            ],
            "property": "classes",
            "value": ""
          },
          {
            "func": "SET",
            "collection": "thisButton",
            "property": "text",
            "value": "\n${COUNT}"
          }
        ]
      }
    ],
    "text": "\n4"
  },
