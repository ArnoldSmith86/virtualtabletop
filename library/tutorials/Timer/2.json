  "theTimer": {
    "type": "timer",
    "id": "theTimer",
    "x": 200,
    "y": -3,
    "z": 876,
    "countdown": true,
    "css": "color:white",
    "millisecondsChangeRoutine": [
      {
        "func": "SELECT",
        "property": "id",
        "value": "timerBar"
      },
      "var bar = ${PROPERTY milliseconds} / ${PROPERTY start}",
      "var bar = ${bar} * 100",
      {
        "func": "SET",
        "property": "css",
        "value": "border-radius: 10px; border: 2px solid black; background-image: linear-gradient(to right, red, ${bar}%, grey -100%)"
      },
      {
        "func": "IF",
        "operand1": "${PROPERTY milliseconds}",
        "relation": "<=",
        "operand2": 0,
        "thenRoutine": [
          {
            "func": "TIMER",
            "timer": "theTimer",
            "mode": "reset"
          }
        ]
      }
    ],
    "start": 60000,
    "parent": "timerBar",
    "movableInEdit": false,
    "precision": 100,
    "milliseconds": 60000
  },
  "theTimer2": {
    "type": "timer",
    "id": "theTimer2",
    "parent": "glassHolder",
    "z": 875,
    "countdown": true,
    "css": "color:black",
    "millisecondsChangeRoutine": [
      {
        "func": "SELECT",
        "property": "id",
        "value": "glassTop"
