      "var bar = ${PROPERTY milliseconds} / ${PROPERTY start}",
      "var bar = ${bar} * 100",
      "var bar = ${bar}/ ${PROPERTY width OF glassTop}",
      {
        "func": "SET",
        "property": "css",
