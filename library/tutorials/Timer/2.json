  "theTimer3": {
    "type": "timer",
    "id": "theTimer3",
    "parent": "clockFace",
    "x": 100,
    "y": 105,
    "z": 880,
    "millisecondsChangeRoutine": [
      "var rotSecond = ${PROPERTY rotation OF secondHand} + 0.6",
      "var rotMinute = ${PROPERTY rotation OF minuteHand} + 0.01",
      "var rotHour = ${PROPERTY rotation OF hourHand} + 0.000833333",
      {
        "func": "SELECT",
        "property": "id",
        "value": "secondHand"
      },
      {
        "func": "SET",
        "property": "rotation",
        "value": "${rotSecond}"
      },
      {
        "func": "SELECT",
        "property": "id",
        "value": "minuteHand"
      },
      {
        "func": "SET",
        "property": "rotation",
        "value": "${rotMinute}"
      },
      {
        "func": "SELECT",
        "property": "id",
        "value": "hourHand"
      },
      {
        "func": "SET",
        "property": "rotation",
        "value": "${rotHour}"
      },
      {
        "func": "IF",
        "operand1": "${PROPERTY milliseconds}",
        "relation": "==",
        "operand2": 0,
        "thenRoutine": [
          {
            "func": "SELECT",
            "property": "id",
            "relation": "in",
            "value": [
              "secondHand",
              "minuteHand",
              "hourHand"
            ]
          },
          {
            "func": "SET",
            "property": "rotation",
            "value": 0
          }
        ]
      }
    ],
    "precision": 100,
    "layer": 2
  },
