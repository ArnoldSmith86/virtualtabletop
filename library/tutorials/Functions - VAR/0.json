  "jkmt": {
    "type": "button",
    "clickRoutine": [
      "var currentX = ${PROPERTY x}",
      "var blackJack = 21",
      "var someNumber = ${blackJack} + ${currentX}",
      "var mystring = 'Hello'",
      "var myObject = ${PROPERTY myObject}",
      "// Note that you cannot set objects or arrays directly (except for empty arrays and objects. For example, the following will not work and creates an error.",
      "var myArray = [1,2,3,4]",
      "// Note that many special characters cannot be set using this method. For example, the following Unicode symbol does not work.",
      "var myUnicode = '⏳'"
    ],
    "x": 501,
    "y": 550,
    "z": 10,
    "id": "jkmt",
    "text": "var",
    "myObject": {
      "someKey": "someValue",
      "anotherKey": "anotherValue"
    }
  },
